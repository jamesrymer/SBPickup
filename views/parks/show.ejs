<% include ../partials/header %>
<div class="container">
    <div class="row">
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= park.image %>">
                <div class="caption-full">
                    <h4><a><%=park.name%></a></h4>
                    <p><%= park.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/parks/<%= park._id %>/games/new">Add New Game</a>
                </div>
                <hr>
                <% park.games.forEach(function(game){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= game.author %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= game.text %> 
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>