<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To SBPickup!</h1>
            
             <p>
                <a class="btn btn-primary btn-large" href="/parks/new">Add New Park</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% parks.forEach(function(park){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= park.image %>">
                   <div class="caption">
                       <h4><%= park.name %></h4>
                   </div>
                   <p>
                       <a href="/parks/<%= park._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
